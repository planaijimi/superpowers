#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/seb/code/superpowers/skills/edge-tts/scripts/node_modules/.pnpm/node-edge-tts@1.2.10/node_modules/node-edge-tts/node_modules:/home/seb/code/superpowers/skills/edge-tts/scripts/node_modules/.pnpm/node-edge-tts@1.2.10/node_modules:/home/seb/code/superpowers/skills/edge-tts/scripts/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/seb/code/superpowers/skills/edge-tts/scripts/node_modules/.pnpm/node-edge-tts@1.2.10/node_modules/node-edge-tts/node_modules:/home/seb/code/superpowers/skills/edge-tts/scripts/node_modules/.pnpm/node-edge-tts@1.2.10/node_modules:/home/seb/code/superpowers/skills/edge-tts/scripts/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../node-edge-tts/bin.js" "$@"
else
  exec node  "$basedir/../node-edge-tts/bin.js" "$@"
fi
